<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="feture_product_form" model="ir.ui.view">
             <field name="name">product.template.event.form.inherit</field>
             <field name="model">product.template</field>
             <field name="inherit_id" ref="product.product_template_form_view"/>
             <field name="arch" type="xml">
                <xpath expr="//form/sheet/div[2]" position="inside">

                    <div>
                        <field name="recommended_product"/>
                        <label for="recommended_product"/>
                    </div>

                </xpath>
            </field>
    </record>
  
</odoo>

